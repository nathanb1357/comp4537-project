    "/api/predictImage": {
      "post": {
        "tags": [
          "api"
        ],
        "summary": "Predict image contents",
        "description": "Upload an image and predict its contents using an external Python model.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "image": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Prediction results",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "predicted_class": {
                      "type": "string"
                    },
                    "confidence": {
                      "type": "number"
                    },
                    "class_confidences": {
                      "type": "object",
                      "additionalProperties": {
                        "type": "number"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
